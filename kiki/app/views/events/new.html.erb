<div data-role="page" id="newevent">

	<div data-role="header">
		<%= link_to 'Cancel', '', :'data-rel' => 'back',
			:'data-transition' => 'slide', :'data-direction' => 'reverse',
			:class => 'ui-btn ui-corner-all ui-shadow ui-icon-delete ui-btn-icon-left' %>
		<h1>Magical mobile app</h1>
		<a href="#" class="ui-btn ui-corner-all ui-shadow ui-icon-check ui-btn-icon-left">Save</a>
	</div>

	<div data-role="main" class="ui-content">

		<%= form_for @event do |e| %>

			<% if @event.errors.any? %>
			 	<div id="error_explanation" class="ui-body ui-body-b ui-corner-all">
			    	<h3>Error</h3>
			    	<p>
		    		<% @event.errors.full_messages.each do |msg| %>
		      			<%= msg %><br/>
		    		<% end %>
		    		</p>
			  	</div>
			  	<p></p>
			<% end %>

			<%= e.label :name, 'Event:' %>
			<%= e.text_field :name %>
			<%= e.label :date_only, 'Date:' %>
			<%= e.date_field :date_only %>			
			<%= e.label :time_only, 'Time:' %>
			<%= e.time_field :time_only %>			
			<%= e.label :place, 'Location:' %>
			<%= e.text_field :place %>


			<%= e.submit %>

		<% end %>

	</div>

</div>  
